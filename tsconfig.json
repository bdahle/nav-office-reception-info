{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": false, //TODO sett true igjen?
        "noUnusedLocals": false, //TODO sett true igjen?
        "noUnusedParameters": false, //TODO sett true igjen?
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src", "lib"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
